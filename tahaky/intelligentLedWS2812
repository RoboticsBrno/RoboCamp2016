#include <FastLED.h>

#define NUM_LEDS 3
#define DATA_PIN 11

CRGB leds[NUM_LEDS];

void setup() 
{
  FastLED.addLeds<NEOPIXEL, DATA_PIN>(leds, NUM_LEDS);
}

void loop() 
{
  leds[0] = CRGB::Red;
  leds[1] = CRGB::Green;
  leds[2] = CRGB(0, 0, 255);
  FastLED.show();
  delay(500);
  leds[0] = CRGB::Black;
  leds[1] = CRGB::Black;
  leds[2] = CRGB(255, 255, 255);
  FastLED.show();
  delay(500);
}
